<#include "security.ftl"><div class="card-columns"><#list messages as message>    <div class="card my-3" style="width: 22rem;">                     <#if message.filename??>                    <img class="card-img-top" alt="Card image cap" src="/img/${message.filename}">                     </#if>        <div class="card-body">            <h5 class="card-title">#${message.tag}</h5>            <p class="card-text">${message.text}</p>        </div>        <div class="card-footer text-muted">            <a href="/user-messages/${message.author.id}">${message.authorName}</a>            <#if currentUserId == message.author.id>                <a class="btn btn-light ml-5" href="/user-messages/${message.author.id}?message=${message.id}">Edit</a>            </#if>        </div>    </div><#else>        No message</#list></div>