<#macro login path isRegisterForm>    <div>        <form accept-charset="UTF-8" class="login-dark" action="${path}" method="post">            <div class="form-group row">                <input type="text" class="form-control ${(usernameError??)?string('is-invalid', '')} newInput" placeholder="User name" name="username" value="<#if user??>${user.username}</#if>">                <#if usernameError??>                    <div class="invalid-feedback">                        ${usernameError}                    </div>                </#if>            </div>            <div class="form-group row">                <input type="password" class="form-control ${(passwordError??)?string('is-invalid', '')} newInput" placeholder="Password" name="password">                <#if passwordError??>                    <div class="invalid-feedback">                        ${passwordError}                    </div>                </#if>            </div>            <#if isRegisterForm>                <div class="form-group row">                    <input type="password" class="form-control newInput" placeholder="Retype password" name="password2">                </div>                <div class="form-group row">                    <input type="email" class="form-control ${(emailError??)?string('is-invalid', '')} newInput" placeholder="some@some.com" value="<#if user??>${user.email}</#if>" name="email">                    <#if emailError??>                        <div class="invalid-feedback">                            ${emailError}                        </div>                    </#if>                </div>                <div class="form-group">                    <div class="g-recaptcha" data-sitekey="6Le9k7MUAAAAAFmBTxJNBl6rWo23CTbphYHRjcf3"></div>                    <#if captchaError??>                        <div class="alert alert-danger" role="alert">                            ${captchaError?ifExists}                        </div>                    </#if>                </div>            </#if>            <#--        <div class="form-group row">-->            <#--            <#if !isRegisterForm><a href="/registration"> Add new user!</a></#if>-->            <#--        </div>-->            <input type="hidden" name="_csrf" value="${_csrf.token}" />            <div class="form-group row"></div>            <div class="form-group row mt-2">                <button type="submit" class="btn btn-primary" style="width: 120px;" ><#if isRegisterForm>Create<#else>Sign In</#if></button>            </div>        </form>    </div></#macro><#macro logout>    <form action="/logout" method="post">        <input type="hidden" name="_csrf" value="${_csrf.token}" />        <button class="btn link-a mx-2" type="submit" ><#if user??>Sign out<#else>Log in</#if></button>    </form></#macro>