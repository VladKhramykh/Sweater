<#import "parts/common.ftl" as c><@c.page><h3>${username?ifExists}</h3>    <hr style="background: purple"/>    <#if messageActivationCode??>        <div class="alert" role="alert">            ${messageActivationCode?ifExists}        </div>    </#if>    <#if message??>    <div class="alert alert-info" role="alert">        ${message?ifExists}    </div>    </#if><form accept-charset="UTF-8" method="post">    <div class="form-group">        <p class="purple-p">New password</p>        <input type="password" class="form-control newInput ${(passwordError??)?string('is-invalid', '')}" placeholder="Password" name="password">        <#if passwordError??>                <div class="invalid-feedback">                    ${passwordError}                </div>        </#if>    </div>    <div class="form-group">        <p class="purple-p">Repeat new password</p>        <input type="password" class="form-control newInput ${(password2Error??)?string('is-invalid', '')}" placeholder="Retype password" name="password2">        <#if password2Error??>                <div class="invalid-feedback">                    ${password2Error}                </div>        </#if>    </div>    <div class="form-group">        <p class="purple-p">Email</p>        <input type="email" class="form-control newInput" placeholder="some@some.com" name="email" value="${email}">    </div>    <input type="hidden" name="_csrf" value="${_csrf.token}" />    <button type="submit" class="link-a-fill-l">Save</button></form></@c.page>