<#import "parts/common.ftl" as c><@c.page><form class="form-inline" method="get" action="/main">    <input class="form-control mr-sm-2" type="search" placeholder="Search" aria-label="Search" <#--type="text"--> name="tag" value="${tag?ifExists}">    <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Найти</button></form><div>    <a class="btn btn-primary my-2" data-toggle="collapse" href="#collapseExample" role="button" aria-expanded="false" aria-controls="collapseExample">        Add new message    </a>    <form class="collapse <#if message??>show</#if>" id="collapseExample" method="post" enctype="multipart/form-data" >        <div class="form-group my-2">            <textarea class="form-control my-2 ${(textError??)?string('is-invalid', '')}"  name="text" placeholder="Введите сообщение"><#if message??>${message.text}</#if></textarea>         <#if textError??>            <div class="invalid-feedback">                ${textError}            </div>         </#if>        </div>        <div class="form-group my-2">            <input class="form-control my-2 ${(tagError??)?string('is-invalid','')}" type="text" placeholder="Tag" value="<#if message??>${message.tag}</#if>" name="tag">             <#if tagError??>                <div class="invalid-feedback">                    ${tagError}                </div>             </#if>        </div>        <div class="custom-file form-group my-2">            <input type="file" class="custom-file-input my-2" id="customFile" name="file">            <label class="custom-file-label my-2" for="customFile">Choose file</label>        </div>        <input type="hidden" name="_csrf" value="${_csrf.token}" />        <button class="btn btn-primary my-2" type="submit" >Опубликовать</button>    </form></div><div class="card-columns">    <#list messages as message>        <div class="card my-3" style="width: 22rem;">            <#if message.filename??>                <img class="card-img-top" alt="Card image cap" src="/img/${message.filename}">            </#if>            <div class="card-body">                <h5 class="card-title">${message.tag}</h5>                <p class="card-text">${message.text}</p>            </div>            <div class="card-footer text-muted">${message.authorName}</div>        </div>    <#else>    No message    </#list></div></@c.page>