<#macro addNewMessage flag>    <button class="link-a-fill" data-toggle="collapse" href="#collapseExample" role="button" aria-expanded="false" aria-controls="collapseExample">        <#if flag>            <i class="fas fa-chevron-down"></i>        <#else >            Edit message<i class="px-2 fas fa-chevron-down"></i>        </#if>    </button>    <#if message?? || flag>        <div class="collapse date-title <#if message?? || flag>show</#if>" id="collapseExample">            <form accept-charset="UTF-8" method="post" enctype="multipart/form-data">                <div class="form-group mt-2">                    <input type="text" class="form-control newInput ${(textError??)?string('is-invalid', '')}"                           value="<#if message??>${message.text}</#if>" name="text" placeholder="Введите сообщение" />                    <#if textError??>                        <div class="invalid-feedback">                            ${textError}                        </div>                    </#if>                </div>                <div class="form-group mt-2">                    <input type="text" class="form-control newInput"                           value="<#if message??>${message.tag}</#if>" name="tag" placeholder="Тэг">                    <#if tagError??>                        <div class="invalid-feedback">                            ${tagError}                        </div>                    </#if>                </div>                <#--                <div class="form-group mt-2">-->                <#--                    <div class="custom-file">-->                <#--                        <input type="file" name="file" id="customFile">-->                <#--                        <label class="custom-file-label" for="customFile"><#if message.filename??>${message.filename}<#else>Choose file</#if></label>-->                <#--                    </div>-->                <#--                </div>-->                <div class="form-group example-1 fileInputDiv">                    <label class="label">                        <i class="material-icons"></i>                        <span class="fileTitle file-class"><#if !flag><#if message.filename??>${message.filename}<#else>Choose file</#if><#else>Choose file</#if></span>                        <input class="file" type="file" name="file" id="customFile">                    </label>                </div>                <input type="hidden" name="_csrf" value="${_csrf.token}" />                <#if !flag>                    <input type="hidden" name="id" value="<#if message??>${message.id}</#if>" />                </#if>                <div class="form-group">                    <button type="submit" class="btn link-a-fill-l">                        <#if flag>                            Sent   <i class="fas fa-paper-plane mx-2"></i>                        <#else>                            Save                        </#if>                    </button>                </div>            </form>        </div>    </#if></#macro>